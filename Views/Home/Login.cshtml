@model Usuario

@{
    ViewData["Title"] = "Login";
}
<!--<div class="container">-->
    <div class="row justify-content-md-center">
        <div class="jumbotron col-6">
            <h1>Bem vindo ao sistema Biblioteca</h1>
            
            <form asp-action="Login" method="POST">
                <div class="form-group">
                    <label asp-for="Login" class="form-label mt-4">Login</label>
                    <input type="text" class="form-control" asp-for="Login">
                </div>

                <div class="form-group">
                    <label asp-for="Senha" class="form-label mt-4">Senha</label>
                    <input type="password" class="form-control" asp-for="Senha">
                </div>
                <input type="submit" class="btn btn-primary btn-lg" value="Entrar" />
            </form>

            <p class="text-danger">@ViewData["Erro"]</p>
        </div>
    </div>
<!--</div> -->